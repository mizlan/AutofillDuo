{
  "manifest_version": 3,
  "name": "AutofillDuo",
  "version": "1.0",
  "description": "Skip the hassle of Duo",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.duosecurity.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.duosecurity.com/*/prompt",
        "https://*.duosecurity.com/*/prompt?*",
        "https://*.duosecurity.com/*/auth",
        "https://*.duosecurity.com/*/auth?*"
      ],
      "all_frames": true,
      "js": ["lib/jsOTP.min.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/activation.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
